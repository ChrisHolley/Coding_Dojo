<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello ASP</title>
</head>
<body>
    <h1>Heare are some delicious foods!</h1>
    @{
        var StringList = new List<string>
            {
                "Apple Pie",
                "Burritos",
                "Clams Casino",
                "Donuts"
            };

        
        foreach(var word in StringList)
        {
            <div>
                @if(word[0] == 'C' || word[0]=='c') 
                {
                    <p style="color: red;">@word</p>
                } else {
                    <p>@word</p>
                }
            </div>
        }
    }
</body>
</html>
